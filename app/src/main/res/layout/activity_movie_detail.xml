<!--            </com.google.android.material.chip.ChipGroup>-->

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/download_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Download"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    app:icon="@drawable/ic_download"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:cornerRadius="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#33FFFFFF"
                    app:backgroundTint="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Share"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:cornerRadius="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#33FFFFFF"
                    app:backgroundTint="@android:color/transparent"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#1AFFFFFF"/>

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"/>

            <TextView
                android:id="@+id/movie_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#CCFFFFFF"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif"
                tools:text="This is a long description of the movie, explaining the plot, characters, and other interesting details that the user might want to read before watching."/>

            <!-- Cast Section (Optional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Cast Crew"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:clipToPadding="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>