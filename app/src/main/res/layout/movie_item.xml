<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="12dp"
    android:background="@color/transparent"
    android:clickable="true"
    android:focusable="true">

    <!-- Movie Thumbnail -->
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/movieThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/accent_dark"
            android:contentDescription="Movie Thumbnail" />

        <!-- Loading placeholder -->
        <ProgressBar
            android:id="@+id/thumbnailLoader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Play overlay on hover -->
        <ImageView
            android:id="@+id/playOverlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_circle"
            android:visibility="gone"
            android:alpha="0.8" />

    </androidx.cardview.widget.CardView>

    <!-- Movie Title -->
    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Movie Title"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="start"
        android:layout_marginBottom="10dp"
        android:lineSpacingMultiplier="1.1" />

    <!-- Movie Description (optional, for detailed view) -->
    <TextView
        android:id="@+id/movieDescription"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Movie description..."
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- Movie metadata (duration, size, etc.) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:id="@+id/movieMetadata">

        <TextView
            android:id="@+id/movieDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:15"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:background="@drawable/metadata_background"
            android:padding="2dp" />

        <TextView
            android:id="@+id/movieSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="569 MB"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:background="@drawable/metadata_background"
            android:padding="2dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>