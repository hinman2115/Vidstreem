<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Night Mode -->
    <style name="Base.Theme.Vidstreem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
    </style>

    <style name="Theme.Vidstreem" parent="Base.Theme.Vidstreem" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Vidstreem</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
    </style>
</resources>
