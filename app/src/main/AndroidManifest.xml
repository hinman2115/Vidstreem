<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Vidstreem"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Ui.Subscriptionplanactivity"
            android:exported="false" />

        <activity
            android:name=".Ui.splashactivity"
            android:exported="true"
            android:theme="@style/Theme.Vidstreem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ui.MovieDetailActivity"
            android:theme="@style/Theme.Vidstreem" />
        <activity
            android:name=".Ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".Ui.LoginMainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting" />
        <activity
            android:name=".Ui.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="YOUR_RAZORPAY_KEY_ID" />
    </application>

</manifest>